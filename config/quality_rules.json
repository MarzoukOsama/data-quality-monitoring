{
  "freshness": {
    "max_age_hours": 24,
    "date_column": "order_date"
  },
  "completeness": {
    "required_columns": [
      "transaction_id",
      "customer_id",
      "product_name",
      "quantity",
      "unit_price",
      "order_date"
    ],
    "max_null_percentage": 5
  },
  "validity": {
    "quantity": {
      "min": 1,
      "max": 100
    },
    "unit_price": {
      "min": 0,
      "max": 10000
    }
  },
  "consistency": {
    "date_format": "%Y-%m-%d",
    "duplicate_threshold": 0.5
  },
  "thresholds": {
    "excellent": 95,
    "good": 80,
    "acceptable": 60,
    "poor": 0
  }
}
